<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToolsActivity"
    android:background="@drawable/backg"

    >


    <Button
        android:id="@+id/sendMyBroadcast"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Broadcast Message"
        android:onClick="sendMyBroadcast"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        />


    <Button
        android:id="@+id/testServiceActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Testing service on android"
        android:layout_below="@+id/sendMyBroadcast"
        android:onClick="goToTestServiceActivity"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/asyncTaskActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Testing AsyncTask"
        android:layout_below="@+id/testServiceActivity"
        android:onClick="goToAsyncTaskActivity"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/permissionsTaskActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Testing Permissions"
        android:layout_below="@+id/asyncTaskActivity"
        android:onClick="goToPermissionsTaskActivity"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>